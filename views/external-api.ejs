<main class="main">
    <!-- Page Title -->
    <div class="page-title" data-aos="fade">
        <div class="heading">
            <div class="container">
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1>Satellite Data</h1>
                        <p class="mb-0">Customer Satellites from ISRO API</p>
                    </div>
                </div>
            </div>
        </div>
        <nav class="breadcrumbs">
            <div class="container">
                <ol>
                    <li><a href="/">Home</a></li>
                    <li class="current">Satellite Data</li>
                </ol>
            </div>
        </nav>
    </div>

    <!-- Satellite Data Section -->
    <section class="section">
        <div class="container" data-aos="fade-up" data-aos-delay="100">
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Country</th>
                                    <th>Launch Date</th>
                                    <th>Mass (kg)</th>
                                    <th>Launcher</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% data.customer_satellites.forEach(satellite=> { %>
                                    <tr>
                                        <td>
                                            <%= satellite.id %>
                                        </td>
                                        <td>
                                            <%= satellite.country %>
                                        </td>
                                        <td>
                                            <%= satellite.launch_date %>
                                        </td>
                                        <td>
                                            <%= satellite.mass %>
                                        </td>
                                        <td>
                                            <%= satellite.launcher %>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<style>
    .table {
        background: var(--surface-color);
        border-radius: 4px;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
    }

    .table thead th {
        background: var(--primary-color);
        color: white;
        border: none;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.02);
    }

    .table td,
    .table th {
        padding: 15px;
        vertical-align: middle;
    }
</style>