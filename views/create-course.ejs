<% const message=locals.message || '' %>


    <main class="main">
        <!-- Page Title -->
        <div class="page-title" data-aos="fade">
            <div class="heading">
                <div class="container">
                    <div class="row d-flex justify-content-center text-center">
                        <div class="col-lg-8">
                            <h1>Create Course</h1>
                            <p class="mb-0">Add a new course to the platform</p>
                        </div>
                    </div>
                </div>
            </div>
            <nav class="breadcrumbs">
                <div class="container">
                    <ol>
                        <li><a href="/">Home</a></li>
                        <li><a href="/courses">Courses</a></li>
                        <li class="current">Create Course</li>
                    </ol>
                </div>
            </nav>
        </div>
        <!-- End Page Title -->

        <!-- Create Course Section -->
        <section id="contact" class="contact section">
            <div class="container" data-aos="fade-up" data-aos-delay="100">
                <div class="row gy-4">
                    <div class="col-lg-12 d-flex align-items-center justify-content-center">
                        <form action="/courses/admin/create-course" method="post" class="php-email-form"
                            enctype="multipart/form-data" data-aos="fade-up" data-aos-delay="200">
                            <div class="row gy-4">
                                <span class="text-danger" id="error">
                                    <%= message %>
                                </span>

                                <!-- Course Title -->
                                <div class="col-md-12">
                                    <label for="title" class="form-label">Course Title</label>
                                    <input type="text" class="form-control" id="title" name="title" required
                                        maxlength="50" placeholder="Enter course title">
                                </div>

                                <!-- Course Summary -->
                                <div class="col-md-12">
                                    <label for="summary" class="form-label">Summary</label>
                                    <textarea class="form-control" id="summary" name="summary" rows="3" required
                                        placeholder="Brief course summary"></textarea>
                                </div>

                                <!-- Course Description -->
                                <div class="col-md-12">
                                    <label for="description" class="form-label">Description</label>
                                    <textarea class="form-control" id="description" name="description" rows="6" required
                                        placeholder="Detailed course description"></textarea>
                                </div>

                                <!-- Course Price -->
                                <div class="col-md-6">
                                    <label for="price" class="form-label">Price ($)</label>
                                    <input type="number" class="form-control" id="price" name="price" required min="0"
                                        step="0.01" placeholder="Course price">
                                </div>

                                <!-- Course Capacity -->
                                <div class="col-md-6">
                                    <label for="capacity" class="form-label">Capacity</label>
                                    <input type="number" class="form-control" id="capacity" name="capacity" required
                                        min="1" placeholder="Maximum students">
                                </div>

                                <!-- Trainer Selection -->
                                <div class="col-md-12">
                                    <label for="trainer" class="form-label">Select Trainer</label>
                                    <select class="form-select" id="trainer" name="trainerId" required>
                                        <option value="">Choose a trainer...</option>
                                        <% trainers.forEach(trainer=> { %>
                                            <option value="<%= trainer._id %>">
                                                <%= trainer.name %>
                                            </option>

                                            <% }); %>
                                    </select>
                                </div>

                                <!-- Course Image -->
                                <div class="col-md-12">
                                    <label for="courseImage" class="form-label">Course Image</label>
                                    <input type="file" class="form-control" id="courseImage" name="courseImage"
                                        accept="image/jpeg,image/png" required>
                                    <div class="form-text">Accepted formats: JPG, JPEG, PNG</div>
                                </div>

                                <!-- Submit Button -->
                                <div class="col-md-12 text-center mt-4">
                                    <div class="loading">Processing</div>
                                    <div class="error-message"></div>
                                    <div class="sent-message">Course created successfully!</div>

                                    <button type="submit" class="btn btn-primary btn-lg">
                                        Create Course
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Create Course Section -->
    </main>